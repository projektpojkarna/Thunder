
@model Dictionary<Profile, Thunder.Models.User.Image>
@using Thunder.Models


<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2  text-center">
                <h1> Thunder </h1>
                <p>
                    Välkommen till Thunder
                    Registrera dig nu, helt gratis!
                    <br />
                    <br />
                </p>
            </div>
            <div class="row">

                @{var keys = Model.Keys; }
                @foreach (var item in keys)
                {
                    <div class="col-md-4">
                        <a href="@Url.Action("ViewProfile", "User",new { userId = item.UserId })">
                            <img class="img-circle" style="display:block; margin: auto;" width="200" height="200" src="@Url.Content(Model[item].ImagePath)" />
                        </a>


                        <div class="row" style="text-align:center;">
                            <h3>@item.FirstName @item.LastName</h3>

                            <h4>@item.Occupation</h4>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

