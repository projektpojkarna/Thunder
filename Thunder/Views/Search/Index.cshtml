@model Dictionary<Profile, Thunder.Models.User.Image>
@using Thunder.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Find</h2>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Occupation</th>
        </tr>
    </thead>
    <tbody>
        @{ var keys = Model.Keys; }
        @foreach (var item in keys)
        {
            <tr>
                <th> <img class="img-thumbnail" src="@Url.Content(Model[item].ImagePath)" /></th>
                <td>
                    @Html.ActionLink(item.FirstName, "ViewProfile/", "User",
                       new { userId = item.UserId }, null)
                </td>
                <td> @Html.DisplayFor(modelitem => item.LastName)</td>
                <td> @Html.DisplayFor(modelitem => item.Occupation)</td>
            </tr>
        }

    </tbody>
</table>
